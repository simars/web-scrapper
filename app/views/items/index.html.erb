<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Address</th>
    <th>Link</th>
    <th>Description</th>
    <!--<th>Detail</th>-->
    <th>Source</th>
    <th>Container</th>
    <th>Container type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.contact %></td>
    <td><%= item.phone %></td>
    <td><%= item.website %></td>
    <td><%= item.address %></td>
    <td><%= link_to 'link',  item.link %></td>
    <td><%= item.description %></td>
    <!--<td><%= item.detail %></td>-->
    <td><%= item.source %></td>
    <td><%= item.container_id %></td>
    <td><%= item.container_type %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

