<h1>Listing targets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Script</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @targets.each do |target| %>
  <tr>
    <td><%= target.name %></td>
    <td><%= target.location %></td>
    <td><%= target.script %></td>
    <td><%= target.description %></td>
    <td><%= link_to 'Show', target %></td>
    <td><%= link_to 'Edit', edit_target_path(target) %></td>
    <td><%= link_to 'Destroy', target, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

